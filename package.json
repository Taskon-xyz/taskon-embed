{
  "name": "@taskon/embed",
  "private": false,
  "version": "0.0.11",
  "description": "TaskOn embed widget for integrating TaskOn tasks into your website",
  "main": "./build/dist/embed.js",
  "module": "./build/dist/embed.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./build/dist/index.d.ts",
      "import": "./build/dist/embed.js"
    },
    "./node": {
      "types": "./build/dist/node/index.d.ts",
      "import": "./build/dist/node/index.js"
    },
    "./build/dist/": {
      "import": "./build/dist/"
    }
  },
  "files": [
    "build/dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "types": "./build/dist/index.d.ts",
  "scripts": {
    "dev": "vite --host",
    "build": "rimraf build/**/* && tsc && vite build && tsc --project tsconfig.node.json && dts-bundle-generator --config ./dts-bundle-generator.config.cjs && copyfiles ./package.json build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "lint": "eslint . --ext .ts",
    "format": "prettier . --write",
    "prepare": "husky && echo 'npx lint-staged' > .husky/pre-commit && git add .husky/pre-commit",
    "uninstall-husky": "npm uninstall husky --no-save && git config --unset core.hooksPath && npx rimraf .husky"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.10",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "copyfiles": "^2.4.1",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "stylelint": "^16.21.1",
    "stylelint-config-recommended": "^16.0.0",
    "stylelint-config-sass-guidelines": "^12.1.0",
    "stylelint-order": "^7.0.0",
    "stylelint-prettier": "^5.0.3",
    "tailwindcss": "^4.1.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.0.3",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/eventemitter3": "^1.2.0",
    "eventemitter3": "^5.0.1",
    "penpal": "^7.0.4"
  }
}
