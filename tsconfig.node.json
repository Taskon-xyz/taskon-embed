{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./build/dist",
    "rootDir": "./src",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "types": ["node"],
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false
  },
  "include": ["src/node/**/*"],
  "exclude": ["src/node/**/*.test.ts"]
}
